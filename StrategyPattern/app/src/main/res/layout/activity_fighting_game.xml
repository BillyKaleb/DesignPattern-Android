<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".Main.FightingGame">

    <TextView
        android:id="@+id/tv_blazblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"
        android:text="Blazblue"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_blazblueCombos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_blazblue"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"
        android:text="Combo?"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_blazblueFootsies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_blazblue"
        app:layout_constraintLeft_toRightOf="@id/btn_blazblueCombos"
        android:layout_margin="30dp"
        android:text="Footsies?"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_blazblueExecution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_blazblue"
        app:layout_constraintLeft_toRightOf="@id/btn_blazblueFootsies"
        android:layout_margin="30dp"
        android:text="Excution?"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_uniel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_blazblueCombos"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"
        android:text="UNIEL"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_unielCombos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_uniel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"
        android:text="Combo?"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_unielFootsies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_uniel"
        app:layout_constraintLeft_toRightOf="@id/btn_unielCombos"
        android:layout_margin="30dp"
        android:text="Footsies?"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_unielExecution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_uniel"
        app:layout_constraintLeft_toRightOf="@id/btn_unielFootsies"
        android:layout_margin="30dp"
        android:text="Excution?"
        android:textSize="15sp"/>

</android.support.constraint.ConstraintLayout>